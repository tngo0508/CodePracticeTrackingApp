@model SessionVM


<div class="container">
    <h1>Problem List</h1>
    <div class="d-flex flex-row-reverse">
        @if (Model.hasData)
        {
            <a asp-controller="Problem" asp-action="DeleteAll" class="btn btn-primary btn-danger my-3">
                <i class="bi bi-trash3-fill"></i> Delete All
            </a>
        }
        else
        {
            <a asp-controller="Problem" asp-action="CreateRandomData" class="btn btn-primary my-3">
                <i class="bi bi-database-add"></i> Seed
            </a>
        }
        <a asp-controller="Problem" asp-action="Upsert" class="btn btn-primary my-3 mx-2">
            <i class="bi bi-plus-square"></i> Add
        </a>
        <form method="post" enctype="multipart/form-data" asp-controller="Problem" asp-action="ImportFromExcel" id="importForm">
            <input type="file" name="file" id="file" accept=".xlsx, .xls" hidden onchange="submitForm()" />
            <button class="btn btn-primary my-3" type="button" onclick="document.getElementById('file').click()">
                <i class="bi bi-cloud-upload"></i> Import
            </button>
        </form>
        @if (Model.hasData)
        {
            <a asp-controller="Problem" asp-action="ExportToExcel" class="btn btn-primary my-3 mx-2">
                <i class="bi bi-cloud-download"></i> Export
            </a>
        }
    </div>


    

    <table id="problem" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Tag</th>
                <th>Difficulty</th>
                <th>Frequency</th>
                <th>Last Update</th>
                <th>Timing</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

<h1 class="my-3">Statistic Analysis</h1>
@if (Model.hasData)
{
    <div class="row">
        <div class="col-sm-6 col-md-7">
            <canvas id="radarChart"></canvas>
        </div>
        <div class="col-sm-6 col-md-5">
            <canvas id="difficultyChart"></canvas>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <button class="btn btn-primary btn-sm float-end" onclick="resetZoomOnTimingChart()">Reset Zoom</button>
            <button class="btn btn-primary btn-sm float-end mx-3" id="toggleTimingChart" onclick="toggleTimingChartType()">Bar</button>
            <canvas id="timingChart"></canvas>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <button class="btn btn-primary btn-sm float-end" onclick="resetZoom()">Reset Zoom</button>
            <button class="btn btn-primary btn-sm float-end mx-3" id="toggleFrequencyChart" onclick="toggleFrequencyChartType()">Bar</button>
            <canvas id="frequencyChart"></canvas>
        </div>
    </div>
    <div class="row mt-3">
        <canvas id="bubbleChart"></canvas>
    </div>
}


@section Scripts
{
    <script src="~/js/ChartData.js"></script>
    <script src="~/js/Problem.js"></script>
    <script>
        function submitForm() {
            document.getElementById('importForm').submit();
        }
    </script>
}